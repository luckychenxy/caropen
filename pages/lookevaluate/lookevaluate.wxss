.container{
  /* height: 100vh; */
  padding:0px;
  margin: auto;
  text-align: center;
  background: #F3F5FA;
}
.factoryHeader{
  width: 115rpx;
  height: 115rpx; 
  margin-top: 57rpx;
}
.comment2-description,{
  padding:30rpx 0;
  display:flex;
  flex-direction:row;
  justify-content: center;
}
.comment3-stars{
  width: 34rpx;
    height: 34rpx;
    background-size: 34rpx 34rpx;
    margin-right: 16rpx;
    transition: 600ms;
}
.factoryTitle{
  font-size: 14px;
color: #4A4A4A;
letter-spacing: 1.31px;
margin: 18rpx 0px 22rpx;
}
.label::before{
  content: "";
display: block;
width: 257rpx;
height: 1rpx;
background: #E4E4E4;
position:absolute;
top:8px;
left: 5%;
}
.label{
  font-size: 12px;
color: #4A4A4A;
letter-spacing: 2px;
position: relative;
width:100%;
}
.label::after{
  content: "";
display: block;
width: 257rpx;
height: 1rpx;
background: #E4E4E4;
position:absolute;
top:8px;
right: 5%;
}
.appraiseTextBox{
  height: 174rpx;
}
.appraiseText{
  margin-top: 20rpx;
}
.appraiseText text{
  border: 1px solid #C2C2C2;
border-radius: 30.5rpx;
font-size: 13px;
padding:9rpx 35rpx;
color: #4A4A4A;
letter-spacing: 1.21px;
margin:0rpx 15rpx;
}
.mt96{
  margin-top: 96rpx;
}
.apptext{
display: flex;
/* flex-direction: row;
flex-wrap: true; */ 
flex-flow: row wrap;
word-break:break-all;
align-content: space-around;
  font-size: 13px;
color: #4A4A4A;
letter-spacing: 1.21px;
margin:42rpx 53rpx 0rpx;
}
.textbox{
  height: 45vh;
}
.appImage{
  margin:34rpx 45rpx;
  text-align: left;
}
.appImage image{
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
}