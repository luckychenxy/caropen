/**index.wxss**/
.contain{
  width: 100%;
  height: 100vh;
  padding:0rpx;
  margin:0 auto;
  background: #FCFCFC;
  text-align: center;
   background-image: url("http://phswzedy1.bkt.clouddn.com/titlefoot.png");
background-size:550rpx 400rpx;
background-repeat:no-repeat;
background-position: 0% 100%;
position: fixed;
/* bottom: 0rpx; */
}
.carOpenimg{
  background: url("http://phswzedy1.bkt.clouddn.com/titlehead.png");
background-size:200rpx 200rpx;
background-repeat:no-repeat;
background-position: 50% 90%;
height: 308rpx;
}
.factoryState::before{
  content: "";
display: block;
width: 143rpx;
height: 1rpx;
background: #6F85FF;
position:absolute;
top:8px;
left: 5%;
}
.factoryState{
  font-size: 12px;
color: #6F85FF;
letter-spacing: 2px;
position: relative;
margin-top: 30rpx;
}
.factoryState::after{
  content: "";
display: block;
width: 143rpx;
height: 1rpx;
background: #6F85FF;
position:absolute;
top:8px;
right: 5%;
}
.carOpen{
  font-family: PingFangSC-Semibold;
  font-size: 22px;
  font-weight: bold;
color: #43496A;
letter-spacing: 8.55px;
}
.authorCar{
  font-size: 12px;
color: #6F85FF;
letter-spacing: 2px;
margin-top:165rpx;
width:80%;
margin:165rpx auto 40rpx;
}
.carOpenbtn{
  background: linear-gradient(-135deg, #6F85FF  4%,#A8BBFF 100%);
  box-shadow: 0 0 17px 0 #A9B6FC;
border-radius: 46.15px;
width:80%;
margin: 0 auto 30rpx;
color:#fff;
height: 100rpx;
font-size: 17px;
line-height: 100rpx;
}
.carOpenYes{
  font-size: 12px;
color: #858488;
margin-top: 40rpx;
}
.phoneNumber{
border: 1px solid #979797;
