.left{
  float: left;
  font-size: 28rpx;
  vertical-align: middle;
  
}
.right{
  font-size:28rpx;
  margin-left:120rpx;
}
.right input{
  position: relative;
  top:4px;
}
.xyy-input{
  width:516rpx;
  line-height:60rpx;
  border-radius: 4rpx;
  border: 1rpx solid #979797;
  margin-bottom: 18rpx;
  height:60rpx;
  padding-left: 16rpx;
  color:#fff;
  position: relative;
}

.xyy-submit{

  margin-top:22rpx; 
  width:534rpx;
}
.xyy-submit button{
  background-color: #FFB214;
  border-radius: 4rpx;
  width:534rpx;
  height:64rpx;
  vertical-align: middle;
  color:#000;
  font-size: 28rpx;
  line-height:64rpx;
  padding:0;
}
.xyy-suc{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  background-color:#fff;
  width:552rpx; 
  height:200rpx;
  border-radius:16rpx;
  
}
.xyy-suc-header{
   padding-top:30rpx; 
  text-align: center;
  font-weight: bold;
  font-size:34rpx;
}
.xyy-suc-text{
  font-size:26rpx;
  margin-top:40rpx;
  text-align: center;
}
.banner{
  position: fixed;
  height:100vh;
  width:63vh;
  z-index:-1;
  /* background-size: cover;
  background-position: top right;
