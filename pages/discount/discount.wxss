.xyy-popup{
  position: fixed;  
  bottom: 0;
  top:0;
  left: 0;
  right: 0;
  margin: auto;
  width:552rpx;
  height:500rpx;
  top:60%;
}
.popup-header{
  margin-bottom:16rpx;
}
.popup-header>view:first-child{
  font-size:40rpx;
  color:#fff;
  letter-spacing: 0.76px;
}
